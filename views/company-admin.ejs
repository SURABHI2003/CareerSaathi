<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/company.css"> <!-- Link to your CSS file -->
    <style>
        /* Additional CSS for styling the button */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #3498db;
            color: white;
        }

        .add-company-button {
            padding: 10px;
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .add-company-button:hover {
            background-color: #27ae60;
        }

        .header-container {
    text-align: center;
    padding: 20px;
    background-color: #6185db;
    color: #fff;
    width: 100%;
}

.company-calendar-heading {
    font-family: 'Arial', sans-serif;
    font-size: 2.5em;
    margin: 0;
    letter-spacing: 2px;
    margin-left: 500px;
}

button {
    margin-left: 1000px;
}
    </style>
    <title>Data Table</title>
</head>
<body>
    <div id="header"></div>
    <div id="side"></div>
    <div class="header-container">
        <h1 class="company-calendar-heading">Company Calendar</h1>
    </div>
    <div >
        <!-- Add Company Details Button -->
        <form action="/add-company" method="get"><button class="add-company-button">Add Company Details</button></form>
    </div>
    
    <table class="data-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
                <th>Month</th>
                <th>Info</th>
                <th>Role</th>
                <th>Website</th>
            </tr>
        </thead>
        <tbody>
            <% companies.forEach(company => { %>
                <tr>
                    <td><%= company.name %></td>
                    <td><%= company.year %></td>
                    <td><%= company.month %></td>
                    <td><%= company.info %></td>
                    <td><%= company.role %></td>
                    <td><a href="<%= company.website %>" target="_blank">Visit Website</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function(){
            $.get('/navbar', function(data){
                $('#header').html(data);
            });
        });
    </script>
     <script>
        $(function(){
            $.get('/side', function(data){
                $('#side').html(data);
            });
        });
    </script>
</body>
</html>
