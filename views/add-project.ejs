<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/add-project.css">
    <title>Project Information Form</title>
</head>
<body>
    <div id="header"></div>
    <div id="side"></div>
    <div class="header-container">
        <h1 class="company-calendar-heading">Project Details</h1>
    </div>
    <div class="form-container">
        <form action="/add-project-details" method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>

            <label for="githubLink">GitHub Link:</label>
            <input type="text" id="githubLink" name="githubLink" required>

            <label for="contributors">Contributors:</label>
            <input type="text" id="contributors" name="contributors" placeholder="Comma-separated ids" required>

            <label for="techStacks">Tech Stacks:</label>
            <input type="text" id="techStacks" name="techStacks" placeholder="Comma-separated tech-stacks" required>

            <button type="submit" class="add-project-btn">Submit</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function(){
            $.get('/navbar', function(data){
                $('#header').html(data);
            });
        });
    </script>
     <script>
        $(function(){
            $.get('/side', function(data){
                $('#side').html(data);
            });
        });
    </script>
</body>
</html>
